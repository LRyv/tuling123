<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tuling123_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iv_tuling123_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_tuling123_time"
        android:contentDescription="@string/head"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_tuling123_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tuling123_time"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toLeftOf="@id/iv_tuling123_head"
        android:layout_toStartOf="@id/iv_tuling123_head"
        android:background="@drawable/chatto_bg_normal"
        android:gravity="center" />
</RelativeLayout>